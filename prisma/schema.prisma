// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  firstName     String
  lastName      String
  middleName    String?
  extension     String?
  title         String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String
  roleId        Int
  role          Roles @relation(fields: [roleId], references: [id])
  record        Records[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Records {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  dateFrom    DateTime
  dateTo      DateTime
  statusTypeId    Int
  statustype      StatusCategory  @relation(fields: [statusTypeId], references: [id])
  destinationId  Int
  destination    LocationCategory  @relation(fields: [destinationId], references: [id])
}

model Roles {
  id        Int   @id @default(autoincrement())
  name      String 
  user      User[]
}

model Status {
  id        Int   @id @default(autoincrement())
  name      String
  statusCategory StatusCategory[]
}

model StatusCategory {
  id        Int   @id @default(autoincrement())
  name      String
  statusId Int
  Status Status @relation(fields: [statusId], references: [id])
  record    Records[]
}

model Locations { 
  id        Int   @id @default(autoincrement())
  name      String
  destinations LocationCategory[]
}

model LocationCategory {
  id        Int   @id @default(autoincrement())
  name      String
  locationId Int
  location Locations @relation(fields: [locationId], references: [id])
  record    Records[]
}


